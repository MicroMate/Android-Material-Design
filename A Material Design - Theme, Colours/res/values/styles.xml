<!-- 

    The material theme is defined as:

 @android:style/Theme.Material (dark version)
 @android:style/Theme.Material.Light (light version)
 @android:style/Theme.Material.Light.DarkActionBar

 -->


<resources>
    
  <!-- inherit from the material theme -->
  <style name="AppTheme" parent="android:Theme.Material.Light">
      
   <!-- Main theme colors -->
  
    Status Bar , darker variant for the status bar and contextual app bars
    <item name="android:colorPrimaryDark">@color/md_light_green_800</item>
    
    Action Bar ,  your app branding color for the app bar
    <item name="android:colorPrimary">@color/md_light_green_500</item>
  
             , theme UI controls like checkboxes and text fields
    <item name="android:colorAccent">@color/md_purple_500</item> 
    
    Title Color - Text Color on ActionBar
    <item name="android:textColorPrimary">@color/md_light_green_800</item>
    
    Background
    <item name="android:windowBackground">@color/md_light_green_300</item>
    
    Navigation Bottom Bar
    <item name="android:navigationBarColor">@color/md_light_green_700</item>
  
  </style>
  
</resources>




